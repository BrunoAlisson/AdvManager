@model WebApplication.Models.Client

@{
    ViewData["Title"] = "Delete";
}

<h2>
    Excluir
</h2>

<h3>
    Tem certeza que deseja excluir este item?
</h3>
<div>
    <h4>
        Cliente
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
