@model IEnumerable<WebApplication.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>
    Clientes
</h2>

<p>
    <a asp-action="Create" class="btn btn-primary glyphicon glyphicon-plus" title="Novo"></a>
</p> 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary glyphicon glyphicon-pencil" title="Editar"></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info glyphicon glyphicon-info-sign" title="Detalhes"></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger glyphicon glyphicon-minus" title="Excluir"></a>
            </td>
        </tr>
}
    </tbody>
</table>
