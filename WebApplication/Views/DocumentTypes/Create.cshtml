@model WebApplication.Models.DocumentType

@{
    ViewData["Title"] = "Create";
}

<h2>Novo</h2>

<h4>Tipo de Documento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success glyphicon glyphicon-ok" title="Confirmar"></button>
                <a asp-action="Index" class="btn btn-danger glyphicon glyphicon-remove" title="Cancelar"></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
